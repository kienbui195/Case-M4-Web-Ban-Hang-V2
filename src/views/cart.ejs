<body class="animsition">

<!-- Header -->
<%- include('./header/productHeader') %>

<!-- Sidebar -->
<%- include('./sidebar/homeSidebar') %>

<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="index.html" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
				Shoping Cart
			</span>
    </div>
</div>

<!-- Cart -->
<form class="bg0 p-t-75 p-b-85" enctype="multipart/form-data" method="post" action="/user/check-out">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                <div class="m-l-25 m-r--38 m-lr-0-xl">
                    <div class="wrap-table-shopping-cart">
                        <table class="table-shopping-cart">
                            <tr class="table_head">
                                <th class="column-1">Product</th>
                                <th class="column-2"></th>
                                <th class="column-3">Price</th>
                                <th class="column-4 text-center">Quantity</th>
                                <th class="column-5">Total</th>
                            </tr>
                            <% products.forEach((product,index) =>{%>
                            <tr class="table_row">
                                <td class="column-1">
                                    <div class="how-itemcart1">
                                        <img src="/<%=product.image%>" alt="IMG">
                                    </div>
                                </td>
                                <td class="column-2"><%= product.name %></td>
                                <td class="column-3">$ <span id="price<%=index%>"><%= product.price %></span></td>
                                <td class="column-4">
                                    <div class="wrap-num-product flex-w m-l-auto m-r-0">

                                        <input class="form-control txt-center" type="number" id="num-product<%=index%>" name="<%= product._id %>" value="1" onchange="changeMoney()">

                                    </div>
                                </td>
                                <td class="column-5">$ <span id="pro-total-<%=index%>" ><%= product.price %></span></td>
                            </tr>
                            <% }) %>
                        </table>
                    </div>

                </div>
            </div>

            <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                    <h4 class="mtext-109 cl2 p-b-30">
                        Cart Totals
                    </h4>

                        <div class=" p-r-18 p-r-0-sm w-full-ssm">
                            <p class="stext-111 cl6 p-t-2">
                                There are no shipping methods available. Please double check your address, or contact us if you need any help.
                            </p>

                            <div class="p-t-15">
									<span class="stext-112 cl8">
										delivery address
									</span>

                                <div class="bor8 bg0 m-b-12">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="address" placeholder="State /  country">
                                </div>

                                <span class="stext-112 cl8">
										Delivery phone number
									</span>

                                <div class="bor8 bg0 m-b-22">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="phone" placeholder="+84*********">
                                </div>

                            </div>
                        </div>


                    <div class="flex-w flex-t p-t-27 p-b-33">
                        <div class="size-208">
								<span class="mtext-101 cl2">
									Total:
								</span>
                        </div>

                        <div class="size-209 p-t-1">
								<span class="mtext-110 cl2">
									$<span id="total-money">0</span>
								</span>
                            <input type="number" id="total_money" name="total_money" style="display: none">
                        </div>
                    </div>

                    <button type="submit" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                        Proceed to Checkout
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Footer -->
<%- include('./footer/productFooter') %>


<!-- Back to top -->
<%- include('./include/backtotop') %>

<!--===============================================================================================-->
<script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
<script src="/vendor/animsition/js/animsition.min.js"></script>
<!--===============================================================================================-->
<script src="/vendor/bootstrap/js/popper.js"></script>
<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
