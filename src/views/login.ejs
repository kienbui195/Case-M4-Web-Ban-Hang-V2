<body>
    <!--Header-->
    <%- include('./header/productHeader')%>

    <!--Body-->

    <!--Notice-->
    <% if (message) { %>
    <% if (message == 'fail') { %>
        <div class="alert alert-danger" role="alert">
            <strong>Fail!</strong> Registion Fail! Your Accout Existed! Please register a new Accout or Login!
        </div>
    <% } else if (message == 'error') { %>
        <div class="alert alert-danger" role="alert">
            <strong>Fail!</strong> Registion Error! Enter password must have at least 6 characters with at least 1 special character, 1 uppercase letter and at least 1 number!
        </div>
    <% } else if (message == 'successVerify') { %>
        <div class="alert alert-success" role="alert">
            <strong>Success!</strong> Verified Success! Please login to use our service!
        </div>
    <% } else if (message == 'codeWrong') { %>
        <div class="alert alert-danger" role="alert">
            <strong>Error!</strong> Verified Error! Wrong Code!
        </div>
    <% } else if (message == 'codeExpired') { %>
        <div class="alert alert-danger" role="alert">
            <strong>Fail!</strong> Verified Error! Your Code Expired!
        </div>
    <% }} %>

    <!--Form Login-->
    <div class="formLogin">
        <form action="/login" method="POST" enctype="multipart/form-data" >
            <div class="cont">
                <div class="form sign-in">
                    <h2>Welcome back,</h2>
                    <label>
                        <span>Email</span>
                        <input type="email" name="username"/>
                    </label>
                    <label>
                        <span>Password</span>
                        <input type="password" name="password" />
                    </label>
                    <button type="submit" class="submit" >Sign In</button>
                    <br>
                    <a type="button" class="fb-btn" href="/google/login" style="margin-top:5px; margin-left: 35%; border-radius: 30px; width: 30%; text-align: center" >Join with <span>Google</span> </a>
                </div>

        </form>

        <div class="sub-cont">
            <div class="img">
                <div class="img__text m--up">
                    <h2>New here?</h2>
                    <p>Sign up and discover great amount of new opportunities!</p>
                </div>
                <div class="img__text m--in">
                    <h2>One of us?</h2>
                    <p>If you already has an account, just sign in. We've missed you!</p>
                </div>
                <div class="img__btn">
                    <span class="m--up">Sign Up</span>
                    <span class="m--in">Sign In</span>
                </div>
            </div>
            <div class="form sign-up">

                <!--Form Register-->
                <h2>Time to feel like home,</h2>
                <form action="/register" method="POST" enctype="multipart/form-data" >
                    <label>
                        <span>Name</span>
                        <input type="text" name="nameRegister" required />
                    </label>
                    <label>
                        <span>Email</span>
                        <input type="email" name="emailRegister" required/>
                    </label>
                    <label>
                        <span>Password</span>
                        <input type="password" name="passwordRegister" required/>
                    </label>
                    <button type="submit" class="submit" >Sign Up</button>
                    <br>
                    <a type="button" class="fb-btn" href="/google/login" style="margin-top:5px; margin-left: 35%; border-radius: 30px; width: 30%; text-align: center" >Join with <span>Google</span> </a>
                </form>
            </div>
        </div>
    </div>


